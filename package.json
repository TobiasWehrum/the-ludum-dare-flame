{
    "name": "the-ludum-dare-flame",
    "version": "0.0.1",
    "description": "",
    "main": "index.js",
    "engines": {
        "node": ">=6.9.5"
    },
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watch",
        "clean": "rimraf dist",
        "lint:fast": "tslint -c tslint.json 'src/**/*.ts' 'src/**/*.tsx'",
        "lint": "run-s -c lint:client lint:server",
        "lint:client": "tslint -c tslint.json --project .",
        "lint:server": "tslint -c tslint.json --project src/server/.",
        "lint:fix": "run-s -c lint:fix:client lint:fix:server",
        "lint:fix:client": "tslint -c tslint.json --project . --fix",
        "lint:fix:server": "tslint -c tslint.json --project src/server/. --fix",
        "start": "node index.js",
        "start:prod": "cross-env NODE_ENV=production node index.js",
        "type-check": "tsc -p ./tsconfig.json",
        "build-client": "cross-env NODE_ENV=production webpack -p",
        "dev-client": "webpack-dev-server -w",
        "dev-client:hot": "webpack-dev-server -w --hot",
        "build-server": "tsc -p ./src/server",
        "dev-server": "tsc-watch -p ./src/server --onSuccess \"node index.js\"",
        "dev": "npm run clean && concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"npm run dev-server\" \"npm run dev-client\"",
        "dev:hot": "npm run clean && concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"npm run dev-server\" \"npm run dev-client:hot\"",
        "build": "npm run clean && concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"npm run build-server\" \"npm run build-client\""
    },
    "prettier": {
        "trailingComma": "all",
        "tabWidth": 2,
        "semi": true,
        "singleQuote": true,
        "jsxSingleQuote": true,
        "printWidth": 120
    },
    "keywords": [],
    "repository": {
        "type": "git",
        "url": "https://github.com/TobiasWehrum/co-op-web-game.git"
    },
    "license": "",
    "author": "Tobias Wehrum",
    "jest": {
        "testEnvironment": "node",
        "testURL": "http://localhost/",
        "roots": [
            "<rootDir>/src"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ],
        "setupTestFrameworkScriptFile": "<rootDir>/src/client/setupEnzyme.ts",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "globals": {
            "ts-jest": {
                "tsConfig": "<rootDir>/src/tsconfig-for-tests.json"
            }
        }
    },
    "dependencies": {
        "@babel/polyfill": "^7.4.4",
        "bind-decorator": "^1.0.11",
        "body-parser": "^1.19.0",
        "deepmerge": "^3.2.1",
        "dotenv": "^8.0.0",
        "ejs": "^2.6.2",
        "eventemitter3": "^3.1.2",
        "express": "^4.17.1",
        "mongodb": "^3.2.7",
        "project-name-generator": "^2.1.7",
        "randanimal": "^1.0.4",
        "socket.io": "^2.2.0",
        "tslib": "^1.10.0",
        "uuid": "^3.3.2"
    },
    "devDependencies": {
        "@babel/core": "^7.4.3",
        "@babel/plugin-proposal-class-properties": "^7.4.4",
        "@babel/plugin-proposal-decorators": "^7.4.4",
        "@babel/plugin-proposal-numeric-separator": "^7.2.0",
        "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
        "@babel/plugin-transform-runtime": "^7.4.4",
        "@babel/preset-env": "^7.4.3",
        "@babel/preset-react": "^7.0.0",
        "@babel/preset-typescript": "^7.3.3",
        "@babel/runtime": "^7.4.5",
        "@types/enzyme": "^3.9.3",
        "@types/express": "^4.17.0",
        "@types/jest": "^21.1.2",
        "@types/mongodb": "^3.1.28",
        "@types/node": "^10.14.9",
        "@types/react": "^16.8.20",
        "@types/react-color": "^3.0.1",
        "@types/react-router-dom": "^4.3.4",
        "@types/socket.io": "^2.1.2",
        "@types/socket.io-client": "^1.4.32",
        "axios": "^0.21.1",
        "babel-loader": "^8.0.6",
        "caniuse-lite": "^1.0.30000974",
        "concurrently": "^4.1.0",
        "cross-env": "^5.2.0",
        "css-loader": "^2.1.1",
        "cssnano": "^4.1.10",
        "enzyme": "^3.10.0",
        "enzyme-adapter-react-16": "^1.14.0",
        "enzyme-to-json": "^3.3.5",
        "file-loader": "^3.0.1",
        "http-proxy-middleware": "^0.19.1",
        "jest": "^21.2.1",
        "mobx": "^5.10.1",
        "mobx-react": "^5.4.4",
        "node-sass": "^7.0.0",
        "normalize.css": "^8.0.1",
        "npm-run-all": "^4.1.5",
        "open-browser-webpack-plugin": "github:rodrigopandini/open-browser-webpack-plugin",
        "postcss-loader": "^3.0.0",
        "react": "^16.8.6",
        "react-color": "^2.17.3",
        "react-dom": "^16.8.6",
        "react-hot-loader": "^4.11.1",
        "react-router": "^4.3.1",
        "react-router-dom": "^4.3.1",
        "request": "^2.88.0",
        "rimraf": "^2.6.3",
        "sass-loader": "^7.1.0",
        "socket.io-client": "^2.2.0",
        "style-loader": "^0.23.1",
        "ts-jest": "^23.10.5",
        "tsc-watch": "^1.1.39",
        "tslint": "^5.17.0",
        "tslint-etc": "^1.5.3",
        "typescript": "^3.5.2",
        "url-loader": "^1.1.2",
        "webpack": "^4.34.0",
        "webpack-bundle-analyzer": "^3.3.2",
        "webpack-cli": "^3.3.4",
        "webpack-dev-server": "^3.7.1",
        "webpack-manifest-plugin": "^2.0.4"
    }
}
